- if @user_type == 0
  %h5.text-white QR Code for most recent order
  %img(src= @png)
- else
  %div.text-center.center-button
    :javascript
        function to_qrcode()
        {
          location.href = "qrcode";
        }
    -# = button_to("Scan QR Code", { action: "qrcode"}, class:"btn.btn-light center-block")
    %button.btn.btn-light.center-block{:type => "button", :onclick => "to_qrcode()"} Scan QR Code


%h5.text-white Recent Orders
%table.text-white
  %tbody
    %tr
      %td{:style => "font-weight: bold"} Name
      %td{:style => "font-weight: bold"} Price
      %td{:style => "font-weight: bold"} Shop
    - @orders.each do |order|
      %tr
        %td= link_to order.name, "/items/" + order.item_id.to_s
        %td= order.price
        %td= link_to get_name_by_shop_id(order.shop_id), "/shops/" + order.shop_id.to_s
        = tag.td(link_to(get_name_by_user_id(order.user_id), "/users/" + order.user_id.to_s)) if @user_type == 1


