%table.text-white
  %tbody
    %tr
      %td{:style => "font-weight: bold"} Name
      %td{:style => "font-weight: bold"} Price
      %td{:style => "font-weight: bold"} Shop
    - @orders.each do |order|
      %tr
        %td= link_to order.name, "/items/" + order.item_id.to_s
        %td= order.price
        %td= link_to get_name_by_shop_id(order.shop_id), "/shops/" + order.shop_id.to_s
        = tag.td(link_to(get_name_by_user_id(order.user_id), "/users/" + order.user_id.to_s)) if @user_type == 1
